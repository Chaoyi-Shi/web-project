<link rel="stylesheet" href="/public/style/clinical_note_history.css">

{{> about-top-nav}}
{{> c-top-nav}}

<form action="/home/note_history/{{patient._id}}" method="POST">

<div "header-grid">
    <div class ="date">
        <label for="timeRange">Choose time range: </label>
        <select name ="timeRange"class = "mode_background" style="padding: 2vw; font-size: large;">
            {{!-- <input type="radio" name="timeRange" id="3days">
            <label for="3days">3 days</label> --}}

            <option value ="Date" > Date</option>
            <option value ="3 days">3 days</option>
            <option value="a week">a week</option>
            <option value="a month">a month</option>
            <option value="3 months">3 months</option>
            <option value="6 months">6 months</option>
            <option value="all">all</option>
        </select>
        <input type="submit" value="submit">
    </div>
</div>
</form>


 
<div class="flex_container1">
    
    <div class = "main_part">
        <table style="width:88%">
            <tr>

                <th input type="text">{{patient.firstName}} {{patient.lastName}}</th>
            </tr>
            {{#each notes}}
            <form action="/home/note_history/{{../patient._id}}" method="POST">
            <tr>
                <input type="hidden" name="target" value="{{this._id}}">
                <td class="grey_block">
                    <input class ="grey_block" type="submit" value="{{this.noteDate}}">
                </td>

                <td class="grey_block"> 
                    {{this.note}}
                </td>
            </tr>
            </form>
            {{/each}}
           
        </table>
        
    </div>

    {{#if target}}
    <div class="note_content">
        <div class="note" >
            <h3> {{target.noteDate}}<h3>
            <h4>{{target.note}}</h4>    
        </div>

    </div>
    {{/if}}
</div>

