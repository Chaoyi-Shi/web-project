
 <link rel="stylesheet" href="../public/style/Dashboard_clinician.css">

<div>
    <h2 id="Title">Clinician Dashboard</h2>
    <h2 id="Title-comments">New comments:</h2>
     
    {{#each patient}}
    <div class="Patient">
        <a  class="Avatar login_start_box" style="background-color: #E9F3FF;">
            <img class="Avatar_img" src="../public/image/avatar/images.jpg" alt="user avatar">
            <p class="main_text">{{this.firstName}} {{this.lastName}}</p>
        </a> 

        {{#each this.records}}
        
            {{#ifRecent this.recordDate}}

                <div  class="Data-block">
                    {{#each this.data}}
                        {{#ifRecorded this.status}}
                            {{#ifAbnormal this.valueMin this.valueMax this.value}}
                                <div class="Data login_start_box" style="background-color: #ffbaa9;">
                                    <a href=""><p>{{this.fullName}}: {{this.value}}</p></a>
                                </div>
                                
                                {{else}}
                                <div class="Data login_start_box" style="background-color: #DFF1F0;">
                                    <a href=""><p>{{this.fullName}}: {{this.value}}</p></a>
                                </div>
                            {{/ifAbnormal}}
                        {{/ifRecorded}}

                        {{#ifUnrecorded this.status}}
                        <div class="Data login_start_box" style="background-color: #F0F0F0">
                            <a href=""><p>{{this.fullName}}: </p></a>
                        </div>
                        {{/ifUnrecorded}}
                    {{/each}}
                

                </div>                
                

                  
                <div class="New-comments">
                    {{#each this.data}}
                        {{#ifRecorded this.status}} 
                        <a href=""><p>{{this.comment}}</p></a>
                         {{/ifRecorded}}
                    {{/each}}
                </div>
                    
            {{/ifRecent}}
        {{/each}}
    </div>

    {{/each}}

</div>
    
